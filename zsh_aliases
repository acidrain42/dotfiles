# Enable aliases when using these commands
alias sudo='sudo '
alias exec='exec '
alias xargs='xargs '

# ls aliases
alias ll='ls -lh'
alias la='ls -A'
alias lf='ls -lhA'
alias lk='ls -l --block-size=1k'
alias lm='ls -l --block-size=1m'
alias lr='ls -lArth'

# Renaming aliases
alias lower='rename '\''y/\ \.A-Z/__a-z/'\'''
alias fix-song-title='rename -s "_" "."'

alias make='make -j4'

alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias cower='cower --color=auto'
alias jgrep='grep -nr --include='\''*.java'\'''
alias csgrep='grep -nr --include='\''*.cs'\'''
alias pygrep='grep -nr --include='\''*.py'\'''
alias astyle='astyle --style=java --formatted --suffix=.bak'
alias svn_clean='svn status --no-ignore | egrep "^[\?I]" | awk '\''{print $2}'\'' | xargs rm -rf'
alias hd='hexdump -C'
alias dd='dd status=progress'
alias rar='unrar'
alias rf='readlink -f'
alias f='open .'

if installed brew; then
    alias pm='brew'
    alias up='brew upgrade && brew cask upgrade'
fi

GNU_UTILS=(
    'cp'
    'find'
    'head'
    'md5sum'
    'mkdir'
    'readlink'
    'rm'
    'sed'
    'sha1sum'
    'sha256sum'
    'shred'
    'tail'
    'zcat'
)

# Replace utils by their gnu coreutils counterparts
if installed gls; then
    alias ls='gls --color=auto -v --group-directories-first'
    for i in ${GNU_UTILS[@]}; do
        alias $i="g$i"
    done
else
    alias ls='ls -G'
fi

if installed nvim; then
    alias vim='nvim'
    alias vimdiff='nvim -d'
fi

if installed colordiff; then
    alias diff='colordiff -u'
else
    alias diff='diff -u'
fi

if [ -x /Applications/mpv.app/Contents/MacOS/mpv ]; then
    alias mpv="/Applications/mpv.app/Contents/MacOS/mpv"
fi

if [ "$TERM" != "xterm" ] && [ "$TERM" != "xterm-256color" ] && [ "$TERM" != "linux" ]; then
    alias ssh='TERM=xterm-256color ssh'
fi
