alias sudo='sudo '  # Enable aliases when using sudo
alias exec='exec '  # Enable aliases when using exec

# ls aliases
alias ls='ls --color=auto -v --group-directories-first'
alias ll='ls -lh'
alias la='ls -A'
alias lf='ls -lhA'
alias lk='ls -l --block-size=1k'
alias lm='ls -l --block-size=1m'
alias lr='ls -lArth'

# Renaming aliases
alias lower='rename '\''y/\ \.A-Z/__a-z/'\'''
alias rename='perl-rename'
alias fix-song-title='rename '\''s/_/./'\'''

alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias cower='cower --color=auto'
alias jgrep='grep -nr --include='\''*.java'\'''
alias csgrep='grep -nr --include='\''*.cs'\'''
alias pygrep='grep -nr --include='\''*.py'\'''
alias astyle='astyle --style=java --formatted --suffix=.bak'
alias diff='colordiff -u'
alias svn_clean='svn status --no-ignore | egrep "^[\?I]" | awk '\''{print $2}'\'' | xargs rm -rf'
alias hd='hexdump -C'
alias dd='dd status=progress'
alias rar='unrar'
alias rf='readlink -f'

if installed trizen; then
    alias up='trizen -Syu'
    alias pm='trizen'
elif installed pacaur; then
    alias up='pacaur -Syu'
    alias pm='pacaur'
elif installed pacman; then
    alias up='sudo pacman -Syu'
    alias pm='pacman'
elif installed apt; then
    alias up='sudo apt update && sudo apt full-upgrade'
fi

if installed nvim; then
    alias vim='nvim'
    alias vimdiff='nvim -d'
fi

if installed thunar; then
    alias f='thunar'
    alias td='(thunar --daemon &>/dev/null &)'
elif installed nautilus; then
    alias f='(nautilus . &> /dev/null &)'
fi

if [ "$TERM" = "xterm-termite" ] || [ "$TERM" = "tmux-256color" ]; then
    alias ssh='TERM=xterm-256color ssh'
fi
