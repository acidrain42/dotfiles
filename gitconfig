[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[color "diff"]
	whitespace = red reverse
[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[user]
	name = acidrain42
	email = acidrain1@gmail.com
[alias]
	st = status
	co = checkout
	ci = commit
	gud = pull
	m = difftool -y
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	edit = "!vim `git ls-files -m`"

	# Get the current branch name (not so useful in itself, but used in
	# other aliases)
	branch-name = "!git rev-parse --abbrev-ref HEAD"

	# Push the current branch to the remote "origin", and set it to track
	# the upstream branch
	publish = "!git push -u origin $(git branch-name)"

	# Delete the remote version of the current branch
	unpublish = "!git push origin :$(git branch-name)"
[gui]
	editor = SciTE
	fontui = -family \"Droid Sans\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"Droid Sans Mono\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
[fetch]
	prune = true
[push]
	default = simple
[diff]
	tool = meld
[merge]
	conflictstyle = diff3
[cola]
	spellcheck = false

